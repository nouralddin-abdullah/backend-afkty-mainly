# =============================================================================
# AFKTY Backend Environment Configuration
# =============================================================================

# Server
PORT=3000
NODE_ENV=development

# PostgreSQL Database (Prisma)
# For local: postgresql://user:password@localhost:5432/afkty
# For cloud: Get connection string from your provider (Supabase, Railway, etc.)
DATABASE_URL="postgresql://postgres:password@localhost:5432/afkty?schema=public"

# Redis (for real-time caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=

# JWT Secrets (generate strong random strings)
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_ADMIN_SECRET=your-admin-secret-key-change-this

# Firebase (for push notifications)
# Download service account from Firebase Console → Project Settings → Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# Dead Man's Switch
HEARTBEAT_TIMEOUT=30000
RECONNECT_GRACE_PERIOD=5000
